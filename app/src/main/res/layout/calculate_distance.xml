<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:background="#00000000"
        android:id="@+id/linearLayout">
        <TextView
            android:id="@+id/calc_dis_text"
            android:layout_width="match_parent"
            android:layout_weight="0.2"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="@string/action_calc_dis"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal"
            android:background="#ff51b17c"
            android:layout_marginRight="0.2dip" />
        <Button
            android:id="@+id/calc_dis_but"
            android:layout_weight="1"
            android:text="@string/action_calc_text"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#ff51b17c" />
        </LinearLayout>

    <com.amap.api.maps.MapView
        android:id="@+id/calc_dis"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout" />

</RelativeLayout>